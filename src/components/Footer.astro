---
// Imports
import Logo from "@/components/assets/Logo2.png";
import { Instagram, Linkedin, Twitter, Facebook } from "@lucide/astro";

const socialPlatforms = [
  { icon: Twitter, href: "https://twitter.com" },
  { icon: Instagram, href: "https://instagram.com" },
  { icon: Linkedin, href: "https://linkedin.com" },
  { icon: Facebook, href: "https://facebook.com" },
];
---

<footer
  class="py-16 px-6 md:px-10 lg:px-16 bg-white w-[80%] mx-auto rounded-2xl mt-10"
>
  <div class="max-w-7xl mx-auto">
    <!-- Primera sección -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10 mb-16">
      <div>
        <a href="#" class="text-white font-bold text-2xl mb-6 inline-block">
          <img src={Logo.src} class="h-auto" />
        </a>
        <p class="text-background mb-6">
          Brindando tranquilidad a través de soluciones de seguros confiables
          desde 1995.
        </p>
        <div class="flex justify-center md:justify-start space-x-4">
          {
            socialPlatforms.map(({ icon: Icon, href }) => (
              <a
                href={href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-primary transition-colors"
              >
                <Icon class="w-8 h-8" color="currentColor" size={24} />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Links -->
      <div
        class="flex flex-wrap flex-col md:flex-row gap-6 md:gap-10 col-span-1 lg:col-span-3 items-center justify-end"
      >
        <a
          href="/nosotros"
          class="text-gray-400 hover:text-primary transition-colors"
        >
          Sobre nosotros
        </a>
        <a
          href="/seguros"
          class="text-gray-400 hover:text-primary transition-colors"
        >
          Seguros
        </a>
        <a
          href="/productores"
          class="text-gray-400 hover:text-primary transition-colors"
        >
          Productores
        </a>
        <a
          href="/contacto"
          class="text-gray-400 hover:text-primary transition-colors"
        >
          Contacto
        </a>
      </div>
    </div>

    <!-- NUEVA barra identificatoria debajo -->

    <!-- Créditos finales -->
    <div
      class="border-t border-gray-400 pt-8 flex flex-col md:flex-row justify-between items-center"
    >
      <p class="text-black text-sm mb-4 md:mb-0">
        © {new Date().getFullYear()} Organización Cucharello. Todos los derechos
        reservados.
      </p>

      <div class="flex flex-wrap justify-center gap-4 text-sm text-gray-500">
        <a href="https://koalaconsultingok.com/" target="_blank">
          <p class="copy flex justify-center items-center p-5 text-md">
            Diseñado por&nbsp;
            <span class="font-bold text-black">Koala Consulting</span>&nbsp;©
          </p>
        </a>
      </div>
    </div>
  </div>
</footer>

<div class="h-20"></div>
